			<RenderObject2D texture="data/textures/gui/square.tga" sizeX="9999" sizeY="120" color="211e1d"/>
		</StaticImage>

		<!-- back button -->
		<Button name="Menu_Replays_Back" align="lb" origin="-1200 -4">
