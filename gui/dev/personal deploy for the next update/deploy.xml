<EventActionBatch name="GAME_GUI_DEPLOY_SHOW_IN_MISSION">
	<!-- show the 'customize' and 'remove all' buttons, only shown while customizing in game -->
	<!-- <Action type="Show" target="#deploy_squad_buttons"/> -->
	<Action type="Show" target="#deploy_button_customize"/>
	<Action type="Show" target="#deploy_button_doctrine"/>
	<Action type="Show" target="#deploy_button_remove_all"/>

	<!-- modify the squads selection screen to show the Customize button instead of the Deploy button -->
	<Action type="Hide" target="#squads_customize_button"/>
	<Action type="Show" target="#squads_deploy_button"/>

	<!-- show by default, this is only shown in campaign and will be revealed with GAME_GUI_DEPLOY_SHOW_IN_CAMPAIGN -->
	<Action type="Show" target="#deploy_squad_pick_button"/>
</EventActionBatch>

